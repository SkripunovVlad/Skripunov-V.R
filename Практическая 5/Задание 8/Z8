def F(x):
  if x == 0:
      print('0')
  else:
      y = int(input())
      a = 1
      z = 1
      if x == y:
          a += 1
          z += 1
      if y == 0:
          print('1')
      while x != 0:
          x = int(input())
          if x == y:
              a += 1
          else:
              y = x
              a = 1
          if a >= z:
              z = a
print(F(1 3 4 5 7 1 1 3 4))
